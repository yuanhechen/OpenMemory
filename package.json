{
  "name": "openmemory",
  "version": "0.1.0",
  "description": "透明、本地优先的 LLM 记忆增强引擎",
  "keywords": ["llm", "memory", "rag", "vector-search", "ai", "local-first"],
  "author": "OpenMemory Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/openmemory/openmemory"
  },
  
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  
  "bin": {
    "openmemory": "openmemory.mjs"
  },
  
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.js"
    }
  },
  
  "files": [
    "openmemory.mjs",
    "dist/**",
    "templates/**",
    "README.md",
    "LICENSE"
  ],
  
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli/entry.ts",
    "start": "node dist/cli/entry.js",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "oxlint",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build"
  },
  
  "engines": {
    "node": ">=20"
  },
  
  "dependencies": {
    "@clack/prompts": "^0.8.0",
    "better-sqlite3": "^11.0.0",
    "chokidar": "^4.0.0",
    "commander": "^12.0.0"
  },
  
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.0",
    "@types/node": "^22.0.0",
    "oxlint": "^0.15.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0",
    "vitest": "^2.0.0"
  },
  
  "optionalDependencies": {
    "sqlite-vec": "^0.1.0"
  }
}
